<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/llayout_bottom_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/txt_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginLeft="80dp"
            android:layout_centerVertical="true"
            android:text="@string/food_all_price"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/txt_order"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="@string/order"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_alignParentRight="true"/>



    </RelativeLayout>



    <ScrollView
        android:layout_above="@id/llayout_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_food"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/primary_text_color"
                    android:textSize="19sp"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/txt_selling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/second_text_color"
                    android:textSize="12sp"
                    android:text="@string/food_selling"
                    android:layout_marginTop="7dp"/>


                <LinearLayout
                    android:id="@+id/llayout_food_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_food_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/second_text_color"
                        android:text="@string/food_size" />


                    <TextView
                        android:id="@+id/btn_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小份"
                        android:textSize="16sp"
                        android:textColor="@drawable/text_selector"
                        android:layout_marginLeft="25dp" />

                    <TextView
                        android:id="@+id/btn_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中份"
                        android:textSize="16sp"
                        android:textColor="@drawable/text_selector"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/btn_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="大份"
                        android:textSize="16sp"
                        android:textColor="@drawable/text_selector"
                        android:layout_marginLeft="20dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff0000"
                        android:text="20"
                        android:textSize="18sp"
                        android:layout_centerVertical="true"/>


                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <Button
                            android:id="@+id/btn_sub"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/sub"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/txt_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_size_normal"/>


                        <Button
                            android:id="@+id/btn_add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/add"
                            android:layout_centerVertical="true"/>


                        <Button
                            android:id="@+id/btn_add_shopping"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ff0000"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:text="@string/food_add_car"/>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_divider"
                    android:background="@color/divider_color"
                    android:layout_gravity="bottom"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@color/second_text_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/food_desc"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txt_desc"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/primary_text_color"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/img_shopping_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/orange_circle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/shopping_car"
        android:padding="10dp"/>

</RelativeLayout>